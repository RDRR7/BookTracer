<%= form_with(model: review, local: true) do |form| %>
<% if review.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(review.errors.count, "error") %>
    prohibited this review from being saved:</h2>

  <ul>
    <% review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<style>
  a {
    color: #9e9e9e;
    text-decoration: none;
  }
  body {
    font-family: 'Source Sans Pro', sans-serif;
  }
  h2 {
    text-transform: uppercase;
  }
  #nav-mobile {
    text-transform: uppercase;
  }
  #nav-mobile a {
    color: #204c48;
    text-decoration: none;
  }

</style>

<div class="header" style="background: #fff;">
  <div class="row" style="background: #fff;">
    <div class="col s12" style="background: #fff; border-bottom: 1px solid rgba(0,0,0,0.1)">
      <center>
        <span class="flow-text" style="color: #204c48; text-transform: uppercase; ">Add a Review</span>
      </center>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="col s8 offset-s2">
      <span class="info">
        Please provide some information about the review you are submitting.
        <br><br>

      </span>

      <hr>

      <div class="row">
        <div class="input-field col s6">
          <%= form.text_field :book, id: :review_book, :class => "validate" %>
          <label for="first_name">Book Name</label>
        </div>

        <div class="input-field col s6">
          <%= form.text_field :author, id: :review_author , :class => "validate"%>
          <label for="last_name">Author</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= form.text_field :reviewer, id: :review_reviewer , :class => "validate"%>
          <label for="email">Author of the review</label>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= form.text_field :link, id: :review_link , :class => "validate"%>
            <label for="email">Link the review</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= form.text_field :summary, id: :review_summary , :class => "validate"%>
            <label for="email">Summary</label>
          </div>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
        <% end %>

      </div>
    </div>
  </div>
</body>
</html>
