<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<html>
<head>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Quicksand" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Great+Vibes" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Lobster+Two" rel="stylesheet">
  <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
  <style>
    body {
      display: flex;
      min-height: 100vh;
      flex-direction: column;
    }

    main {
      flex: 1 0 auto;
    }

    body {
      font-family: 'Quicksand', sans-serif;
      background: #fff;
    }

    h5{
      font-size: 40px;
      font-family: 'Great Vibes', cursive;
    }

    .input-field input[type=date]:focus + label,
    .input-field input[type=text]:focus + label,
    .input-field input[type=email]:focus + label,
    .input-field input[type=password]:focus + label {
      color: #e91e63;
    }

    .input-field input[type=date]:focus,
    .input-field input[type=text]:focus,
    .input-field input[type=email]:focus,
    .input-field input[type=password]:focus {
      border-bottom: 2px solid #e91e63;
      box-shadow: none;
    }
  </style>
</head>

<body>
  <div class="section"></div>
  <main>
    <center>
      <img class="responsive-img" style="width: 250px;" src=<%= image_path("Logo2.png") %> />

      <h5 class="indigo-text">Welcome!</h5>

      <div class="container">
        <div class="z-depth-1 grey lighten-4 row" style=" width: 400px;display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

          <form class="col s12" method="post">
            <div class='row'>
              <div class='col s12'>
              </div>
            </div>

            <div class='row'>
              <label for='email'>Email</label>
              <div class='input-field col s12'>
                <%= f.text_field :email, :class=>'validate'%>
              </div>
            </div>

            <div class='row'>
              <label for='password'>Password</label>
              <div class='input-field col s12'>
                <%= f.password_field :password, :class=>'validate'%>
              </div>
            </div>    

            <label style='float: right;'>
              <a><b><%= link_to "Forgot your password?", new_password_path(resource_name), :class=>'pink-text' %><br/></b></a>
            </label>

          <br/>
          <center>
            <div class='row'>
              <div class="actions">
                <%= f.submit "Log in", :class=>'col s12 btn btn-large waves-effect indigo' %>
              </div>  
            </div>
          </center>
        </form>
      </div>
    </div>
    <% end %>
    <a> <%= link_to('Not part of the community yet? Sign up', new_user_registration_path)  %>
    </a>
  </center>

  <div class="section"></div>
  <div class="section"></div>
</main>


<script type="text/javascript" src="js/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="js/materialize.min.js"></script>
</body>
</html>